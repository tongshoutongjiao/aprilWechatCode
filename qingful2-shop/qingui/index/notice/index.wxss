@import "../../../app.wxss";
.qingful-notice-wrap{
    background-color: #fff;
    padding: 0 24rpx;
    margin-bottom: 20rpx;
}
.qingful-notice-icon{
    width: 100%;
    height: 100%;
}
/*样式1  */
.qingful-notice-style-1 .qingful-notice-icon-wrap{
    width: 76rpx;
    height: 76rpx;
    margin-top: 35rpx;
}
.qingful-notice-style-1 .qingful-notice-vertical-line{
    width: 2rpx;
    height: 48rpx;
    background-color: #e6e6e6;
    margin: 49rpx 20rpx;
}
.qingful-notice-style-1 .qingful-notice-info-wrap{
    margin: 30rpx 0;
}
.qingful-notice-style-1 .qingful-notice-text-item{
    color: #222;
    line-height: 40rpx;
}
.qingful-notice-style-1 .qingful-notice-text-item:nth-child(2){
    margin-top: 6rpx;
}

@import "../../../font.wxss";
@import "../../../app.wxss";
.qingful-store-wrap{
    background-color: #fff;
    margin-bottom: 20rpx;
}
.qingful-store-bg{
    height: 260rpx;
    position: relative;
}
.qingful-store-img{
    width: 100%;
    height: 100%;
}
.qingful-store-active{
    position: absolute;
    width: 0;
    height: 0;
    bottom: 0;
    left: 60rpx;
    border-right: 10rpx solid transparent;
    border-bottom: 10rpx solid #fff;
    border-left: 10rpx solid transparent;
}
.qingful-store-product{
    padding: 20rpx 24rpx 0;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
}
.qingful-store-product-item:not(:last-child){
    margin-right: 12rpx;
}
.qingful-store-product-item:last-child{
    padding-right: 24rpx;
}
.qingful-store-logo{
    width: 120rpx;
    height: 120rpx;
    border-radius: 10rpx;
}
.qingful-store-logo-img{
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}
.qingful-store-info{
    height: 120rpx;
    color: #fff;
}
.qingful-store-product-info-style{
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    padding: 16rpx 0;
}
/*样式1  */
.qingful-store-wrap.style-1{
    margin: 0 24rpx;
    box-shadow: 0rpx 8rpx 16rpx rgba(0,0,0,.1);
}
.qingful-store-bg.style-1{
    border-radius: 6rpx;
}
.qingful-store-img.style-1{
    border-radius: 6rpx;
}
/*样式2  */
.qingful-store-bg.style-2{
    padding: 0 24rpx;
    border-radius: 10rpx;
}
.qingful-store-img.style-2{
    border-radius: 10rpx;
}
.qingful-store-product-img{
    width: 216rpx;
    height: 216rpx;
}
.qingful-store-product-img .qingful-store-img.style-2{
    border-radius: 0;
}
.qingful-store-product-info.style-2{
    padding: 0 14rpx;
    position: relative;
}
.qingful-store-buy{
    position: absolute;
    bottom: 16rpx;
    right: 6rpx;
}
/*样式3  */
.qingful-store-logo.style-3{
    position: absolute;
    left: 24rpx;
    top: 60rpx;
}
.qingful-store-info.style-3{
    position: absolute;
    top: 60rpx;
    left: 158rpx; 
}
/*样式4  */
.qingful-store-logo.style-4{
    position: absolute;
    left: 50%;
    top: 20rpx;
    margin-left: -60rpx;
}
.qingful-store-info.style-4{
    position: absolute;
    top: 140rpx;
    left: 44rpx;
}
/*样式5  */
.qingful-store-wrap.style-5{
    position: relative;
}
.qingful-store-product-item.style-5:last-child{
    padding-right:24rpx;
}
/*样式6  */
.qingful-store-wrap.style-6{
    position: relative;
}
.qingful-store-product-item.style-6{
    padding-right:0;
}
/*样式7  */
.qingful-store-info.style-7{
    position: absolute;
    top: 140rpx;
    left: 24rpx;
}
.qingful-store-product-wrap{
    position: absolute;
    top: 240rpx;
    background-color: #fff;
    border-radius: 10rpx 0 0 0;
}
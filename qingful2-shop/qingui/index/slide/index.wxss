.qingful-slide-wrap {
    width: 100%;
    position: relative;
    margin-bottom: 20rpx;
}
.qingful-slide-image {
    width: 100%;
    height: 100%;
}
.qingful-slide-dots-wrap{
    width: 60rpx;
    height: 10rpx;
    padding: 4rpx 0;
    position: absolute;
    bottom: 16rpx;
    z-index: 100;
    display: flex;
    flex-direction: row;
}
.qingful-slide-dots-wrap.left{
    left: 24rpx;
}
.qingful-slide-dots-wrap.center{
    left:50%;
    margin-left: -40rpx;
}
.qingful-slide-dots-wrap.right{
    right: 24rpx;
}
.qingful-slide-dots-item{
    width: 10rpx;
    height: 10rpx;
    background-color: rgba(255,255,255,.8);
    border-radius: 50%;
}
.qingful-slide-dots-item:nth-child(2){
    margin: 0 10rpx;
}
.qingful-slide-dots-item.active{
    width: 20rpx;
    border-radius: 20rpx;
    background-color: #fff;
}
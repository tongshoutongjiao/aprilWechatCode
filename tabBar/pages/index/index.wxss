/*tabList*/

.container{
  width: 100%;
  height: 100%;
  position: relative;
  background: #fff;
}
.tabList{
  display: flex;
  position: absolute;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  height: 100rpx;
  background-color: #F7F7FA;
}
.tabList::before{
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #C0BFC4;
  color: #C0BFC4;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.tabList .specTab{
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 5px 0 0;
  font-size: 0;
  color: #999999;
  text-align: center;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
}
.tabList .specTab .icon{
  position: relative;
  display: inline-block;
  text-align: center;
  background-size: cover;
  border-radius: 50%;
  width: 54rpx;
  height: 54rpx;

}
.tabList .specTab .icon text{
  position: absolute;
  display: inline-block;
  right: -10rpx;
  top: 0;
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  background: #F43530;
  color: #fff;
  font-size: 20rpx;
  line-height: 25rpx;
  text-align: center;
}


.tabList .specTab .con{
  display: inline-block;
  width: 100%;
  font-size: 24rpx;
}
.selected text{
  color: #09BB07;
}








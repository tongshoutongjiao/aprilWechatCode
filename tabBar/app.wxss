/**app.wxss**/
page{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  overflow: auto;
  font-family: PingFangSC-Regular;
}
.container{
  width:100%;
  position:absolute;
  top:0;
  bottom:0;
  box-sizing:border-box;
  background-color:#e6e6e6;
  overflow:auto;
  -webkit-overflow-scrolling:touch
}
image{
  display: inline-block;
}
.vm {  vertical-align: middle;}
.tc { text-align: center;}
.tr { text-align: right;}
.hr { border-bottom: 1px solid #E5E5E5;}
.hidden { display: none;}
.mb10 { margin-bottom: 10rpx;}
.mb20 { margin-bottom: 20rpx;}
.mb30 { margin-bottom: 30rpx;}
.mb40 { margin-bottom: 40rpx;}
.mt10 { margin-top: 10rpx;}
.mt20 { margin-top: 20rpx;}
.mt30 { margin-top: 30rpx;}
.mt40 { margin-top: 40rpx;}
.ml10 { margin-left: 10rpx;}
.ml20 { margin-left: 20rpx;}
.ml30 { margin-left: 30rpx;}
.ml40 { margin-left: 40rpx;}
.mr10 { margin-right: 10rpx;}
.mr20 { margin-right: 20rpx;}
.mr30 { margin-right: 30rpx;}
.mr40 { margin-right: 40rpx;}
.m10 { margin: 10rpx;}
.m20 { margin: 20rpx;}
.m30 { margin: 30rpx;}
.m40 { margin: 40rpx;}
.fl { float: left;}
.fr { float: right;}
.fb { font-weight:bold;}
.clear:after {
  display: block;
  height: 0;
  content:' ';
  clear: both;
  visibility: hidden;
}
.passage {
  word-break:break-all;
  word-wrap: break-word;
}

.flex-wrap {
  display: flex;
}
.flex-item {
  flex-grow: 1;
}
.color-font {color:#555555;}
.color-999 {color:#999999;}




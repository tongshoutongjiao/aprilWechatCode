  src: url('//at.alicdn.com/t/font_560268_88d0lh7dbcma38fr.eot');
  src: url('//at.alicdn.com/t/font_560268_88d0lh7dbcma38fr.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_560268_88d0lh7dbcma38fr.woff') format('woff'),
  url('//at.alicdn.com/t/font_560268_88d0lh7dbcma38fr.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_560268_88d0lh7dbcma38fr.svg#iconfont') format('svg');
